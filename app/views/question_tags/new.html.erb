<h1>タグ登録<h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @question_tag) do |f| %>
        <%= render 'shared/error_messages' %>
      <%= f.label :tag %>
      <%= f.text_field :tag, class: 'form-control' %>

      <%= f.submit "作成する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>